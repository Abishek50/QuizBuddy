<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hardbg"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".Q1HardFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="15dp"
        android:text="Name two elements discovered by Marie Curie?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:gravity="start"
        tools:ignore="RtlSymmetry">

        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="H2O"
            android:textSize="18sp"
            android:textColor="@color/question"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Polonium"
            android:textSize="18sp"
            android:textColor="@color/question"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/cb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Radium"
            android:textSize="18sp"
            android:textColor="@color/question"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:backgroundTint="@color/hardtab"
        android:textColor="@color/itemTitle"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:text="Submit"/>

</LinearLayout>