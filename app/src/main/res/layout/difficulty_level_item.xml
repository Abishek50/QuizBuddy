<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="25dp">

    <!--cardView for rounded corners-->
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:cardCornerRadius="90dp"
        android:elevation="25dp"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">


            <TextView
                android:id="@+id/difficulty_title"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@color/itemtop"
                android:text="@string/title"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/itemTitle"/>

            <TextView
                android:id="@+id/difficulty_description"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@color/itembottom"
                android:text="@string/description"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:textColor="@color/itemdes"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>